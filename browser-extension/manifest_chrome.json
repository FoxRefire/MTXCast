{
    "name": "MTXCast",
    "description": "Opensource chromecast alternative(client app for firefox)",
    "version": "1.1",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "MTXCast"
    },
    "content_scripts": [
        {
          "js": ["content.js"],
          "css": ["casting.css"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "contextMenus", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self';"
    }
}
