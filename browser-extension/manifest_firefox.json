{
    "name": "MTXCast",
    "description": "Opensource chromecast alternative(client app for firefox)",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "Librezam",
        "default_popup": "/popup/guess.html"
    },
    "content_scripts": [
        {
          "js": ["content.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "permissions": ["tabs", "webNavigation", "storage"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [{
        "resources": ["/utils/fixHeadlessAudio.js"],
        "matches": ["<all_urls>"]
    }],
    "browser_specific_settings": {
        "gecko": {
            "id": "MTXCast@FoxRefire"
        }
    }
}
